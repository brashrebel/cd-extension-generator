<?xml version="1.0" encoding="UTF-8"?>
<forms version="1.8.5">
	<form labelPlacement="top_label" useCurrentUserAsAuthor="1">
		<title><![CDATA[Extension Generator]]></title>
		<description><![CDATA[This form generates a custom Client Dash extension.]]></description>
		<descriptionPlacement><![CDATA[below]]></descriptionPlacement>
		<button type="text">
			<text><![CDATA[Generate]]></text>
		</button>
		<fields>
			<field id="18" size="medium" type="section" displayOnly="1">
				<description><![CDATA[Basic information about you.]]></description>
				<label><![CDATA[Basic Information]]></label>
			</field>
			<field id="3" isRequired="1" size="medium" type="text">
				<adminLabel><![CDATA[author_name]]></adminLabel>
				<cssClass><![CDATA[gf_left_third]]></cssClass>
				<label><![CDATA[Your Name]]></label>
			</field>
			<field id="4" size="medium" type="website">
				<adminLabel><![CDATA[author_uri]]></adminLabel>
				<cssClass><![CDATA[gf_middle_third]]></cssClass>
				<label><![CDATA[Your Website]]></label>
			</field>
			<field id="20" size="medium" type="text">
				<adminLabel><![CDATA[author_wp]]></adminLabel>
				<description><![CDATA[Your wordpress.org username. (required if you are going to host this plugin on the WordPress plugin repository)]]></description>
				<cssClass><![CDATA[gf_right_third]]></cssClass>
				<label><![CDATA[Your WordPress Username]]></label>
			</field>
			<field id="21" size="medium" type="section" displayOnly="1">
				<description><![CDATA[Basic information about your plugin.]]></description>
				<label><![CDATA[Plugin Information]]></label>
			</field>
			<field id="1" isRequired="1" size="medium" type="text">
				<adminLabel><![CDATA[plugin_name]]></adminLabel>
				<defaultValue><![CDATA[My Awesome Client Dash Extension]]></defaultValue>
				<cssClass><![CDATA[gf_left_third]]></cssClass>
				<label><![CDATA[Plugin Name]]></label>
			</field>
			<field id="2" isRequired="1" size="medium" type="textarea">
				<adminLabel><![CDATA[plugin_description]]></adminLabel>
				<defaultValue><![CDATA[This plugin makes Client Dash, though already awesome in itself, even more awesomer!]]></defaultValue>
				<cssClass><![CDATA[gf_middle_third]]></cssClass>
				<label><![CDATA[Plugin Description]]></label>
			</field>
			<field id="19" size="medium" type="text">
				<adminLabel><![CDATA[plugin_tags]]></adminLabel>
				<description><![CDATA[A comma delimited list of tags that describe the plugin.]]></description>
				<cssClass><![CDATA[gf_right_third]]></cssClass>
				<label><![CDATA[Plugin Tags]]></label>
			</field>
			<field id="17" size="medium" type="section" displayOnly="1">
				<description><![CDATA[This will control where your extension content is found.]]></description>
				<label><![CDATA[Location]]></label>
			</field>
			<field id="6" isRequired="1" size="medium" type="select">
				<adminLabel><![CDATA[page]]></adminLabel>
				<description><![CDATA[Which Client Dash page to show your extension's content in.]]></description>
				<cssClass><![CDATA[gf_left_third]]></cssClass>
				<label><![CDATA[Page]]></label>
				<choices>
					<choice>
						<text><![CDATA[Account]]></text>
					</choice>
					<choice>
						<text><![CDATA[Reports]]></text>
					</choice>
					<choice>
						<text><![CDATA[Help]]></text>
					</choice>
					<choice>
						<text><![CDATA[Webmaster]]></text>
					</choice>
				</choices>
			</field>
			<field id="5" isRequired="1" size="medium" type="text">
				<adminLabel><![CDATA[tab]]></adminLabel>
				<description><![CDATA[The name of the tab for your extension's content to show under.]]></description>
				<cssClass><![CDATA[gf_middle_third]]></cssClass>
				<label><![CDATA[Tab]]></label>
			</field>
			<field id="7" isRequired="1" size="medium" type="text">
				<adminLabel><![CDATA[section_name]]></adminLabel>
				<description><![CDATA[The name of the "content section" your extension's content will exist in.

EG: "My Extension's Content"]]></description>
				<cssClass><![CDATA[gf_right_third]]></cssClass>
				<label><![CDATA[Section Name]]></label>
			</field>
			<field id="12" size="medium" type="section" displayOnly="1">
				<description><![CDATA[This is where all of the extension settings would be displayed.]]></description>
				<label><![CDATA[Settings Tab]]></label>
			</field>
			<field id="9" size="medium" type="checkbox" enableChoiceValue="1">
				<adminLabel><![CDATA[do_settings]]></adminLabel>
				<label><![CDATA[Do you want a settings tab for this extension?]]></label>
				<choices>
					<choice>
						<text><![CDATA[Yes]]></text>
						<value><![CDATA[1]]></value>
					</choice>
				</choices>
			</field>
			<field id="10" isRequired="1" size="medium" type="text">
				<adminLabel><![CDATA[settings_tab]]></adminLabel>
				<description><![CDATA[This can be a new tab, or it can be an existing settings tab.]]></description>
				<label><![CDATA[Settings Tab]]></label>
				<conditionalLogic actionType="show" logicType="all">
					<rules>
						<rule fieldId="9" operator="is">
							<value><![CDATA[1]]></value>
						</rule>
					</rules>
				</conditionalLogic>
			</field>
			<field id="13" size="medium" type="section" displayOnly="1">
				<description><![CDATA[Your extension can add custom menu items to be used under "Client Dash Settings -> Menus".]]></description>
				<label><![CDATA[Custom Menu Items]]></label>
			</field>
			<field id="14" size="medium" type="checkbox" enableChoiceValue="1">
				<adminLabel><![CDATA[do_menus]]></adminLabel>
				<label><![CDATA[Do you want to use custom menu items?]]></label>
				<choices>
					<choice>
						<text><![CDATA[Yes]]></text>
						<value><![CDATA[1]]></value>
					</choice>
				</choices>
			</field>
			<field id="15" size="medium" type="section" displayOnly="1">
				<description><![CDATA[Your extension can also have custom widgets to be used under "Client Dash Settings -> Widgets".]]></description>
				<label><![CDATA[Custom Widgets]]></label>
			</field>
			<field id="16" size="medium" type="checkbox" enableChoiceValue="1">
				<adminLabel><![CDATA[do_widgets]]></adminLabel>
				<label><![CDATA[Do you want to use custom widgets?]]></label>
				<choices>
					<choice>
						<text><![CDATA[Yes]]></text>
						<value><![CDATA[1]]></value>
					</choice>
				</choices>
			</field>
		</fields>
		<confirmations>
			<confirmation id="53fd1e1e993fe" isDefault="1" type="message">
				<name><![CDATA[Default Confirmation]]></name>
				<message><![CDATA[Awesome!

Your freshly baked Client Dash extension will be ready in a moment.]]></message>
			</confirmation>
		</confirmations>
		<notifications>
			<notification id="53fd1e1e99268">
				<to><![CDATA[{admin_email}]]></to>
				<name><![CDATA[Admin Notification]]></name>
				<event><![CDATA[form_submission]]></event>
				<toType><![CDATA[email]]></toType>
				<subject><![CDATA[New submission from {form_title}]]></subject>
				<message><![CDATA[{all_fields}]]></message>
			</notification>
		</notifications>
	</form>
</forms>